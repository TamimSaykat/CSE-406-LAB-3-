#include <SoftwareSerial.h>

const uint8_t RX_PIN = D6;  // Slave RX (from Master TX)
const uint8_t TX_PIN = D5;  // Slave TX (to Master RX)
constexpr long UART_BAUD = 38400;  // change per test

SoftwareSerial swSer(RX_PIN, TX_PIN);

void setup() {
  Serial.begin(115200);
  swSer.begin(UART_BAUD);
  Serial.println("Slave ready");
}

void loop() {
  while (swSer.available() > 0) {
    int c = swSer.read();
    swSer.write((uint8_t)c);
  }
}
